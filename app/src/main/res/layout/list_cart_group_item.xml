<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_42"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_30"
            android:background="@drawable/check_box_selector"
            android:button="@null"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="基础建材"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/font_size_30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_40"
            android:text=""
            android:textColor="@color/text_color_red" />

        <TextView
            android:id="@+id/groupInfo"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/dimen_20"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="*为了长期提供评价商品，单一基材商品订单满2000.00元免费配送，不满需加150.00元配送费!"
            android:textColor="@color/base_text_info_color"
            android:textSize="@dimen/font_size_18" />

    </LinearLayout>
    <View
        style="@style/divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>