<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/base_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_420"
                >
			
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_420"
                android:src="@mipmap/loading_image"
                android:scaleType="fitXY"
               />
            
            <ImageView 
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
			    android:src="@mipmap/nav_back"
			    android:id="@+id/back_to_login"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    />
            
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_80"
                android:background="@drawable/login_shape_layout"
                android:padding="@dimen/dimen_0" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_28"
                    android:src="@drawable/login_icon_ph" />

                <EditText
                    android:id="@+id/accountNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_toEndOf="@+id/img1"
                    android:background="@android:color/transparent"
                    android:hint="请输入注册的手机号"
                    android:inputType="phone"
                    android:textColor="@color/base_text_info_color"
                    android:textColorHint="@color/base_text_info_color"
                    android:textSize="@dimen/font_size_32" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/login_shape_layout"
                android:padding="@dimen/dimen_0" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_38"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_28"
                    android:src="@drawable/login_icon_suo" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:layout_toEndOf="@+id/img2"
                    android:background="@android:color/transparent"
                    android:hint="请输入6-20位字母和数字组合的登入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/base_text_info_color"
                    android:textColorHint="@color/base_text_info_color"
                    android:textSize="@dimen/font_size_32" />
            </RelativeLayout>

            <RelativeLayout
                  android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                  <TextView
                android:id="@+id/logup_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_20"
                android:text="手机快速注册"
                android:textColor="@color/text_press"
                android:textSize="@dimen/font_size_26" />
                 <TextView
                android:id="@+id/forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dimen_20"
                android:text="找回密码"
                android:textColor="@color/text_press"
                android:textSize="@dimen/font_size_26" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_100"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:orientation="vertical" >
                <Button
                    android:background="@drawable/button_base"
                    android:gravity="center"
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_80"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:enabled="false"
                    android:textSize="@dimen/font_size_32"
                    android:textColor="@color/white"
                    android:text="登入"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginTop="@dimen/dimen_60"
                android:layout_marginBottom="@dimen/dimen_100"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/qq_login"
                    android:drawablePadding="@dimen/dimen_20"
                    android:gravity="center_vertical"
                    android:text="QQ登入"
                    android:textColor="@color/base_text_info_color"
                    android:textSize="@dimen/font_size_26" />

                <TextView
                    android:id="@+id/sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_80"
                    android:drawableStart="@drawable/wx_login"
                    android:drawablePadding="@dimen/dimen_20"
                    android:gravity="center_vertical"
                    android:text="微信登入"
                    android:textColor="@color/base_text_info_color"
                    android:textSize="@dimen/font_size_26" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

