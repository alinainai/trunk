<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/dimen_346"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dimen_346"
            android:layout_height="@dimen/dimen_220"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="#fdf8fc05"/>

        <TextView
            android:id="@+id/textView1"
            style="@style/tv_color_33_size_26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_26"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="装修效果棒棒哒，安居易果然是最好的选择" />
    </LinearLayout>

</RelativeLayout>