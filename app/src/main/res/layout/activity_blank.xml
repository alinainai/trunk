<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:clipToPadding="true"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/home_radio_bg"
        android:layout_alignTop="@+id/rg_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



    <RadioGroup
        android:paddingTop="6dp"
        android:paddingBottom="3dp"
        android:id="@+id/rg_radio"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:background="@color/trans"
            android:textSize="8dp"
            android:textColor="@color/bottom_text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="1dp"
            android:checked="true"
            android:id="@+id/home_btn"
            android:drawableTop="@drawable/home_main_s"
            android:scaleType="matrix"
            android:gravity="center"
            android:text="@string/home" />
        <Button
            android:layout_alignParentBottom="true"
            android:background="@color/trans"
            android:layout_centerHorizontal="true"
            android:id="@+id/account_btn"
            android:textSize="8dp"
            android:layout_weight="1"
            android:textColor="@color/bottom_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/home_account_s"
            android:text="备用" />

        <RadioButton
            android:background="@color/trans"
            android:gravity="center"
            android:id="@+id/mine_btn"
            android:textSize="8dp"
            android:textColor="@color/bottom_text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/home_mine_s"
            android:scaleType="matrix"
            android:text="@string/mine" />
    </RadioGroup>
</RelativeLayout>