<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical" >

    <include layout="@layout/default_main_cart_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_50"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:visibility="gone"
                android:background="@color/white" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add_sever_adr"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_30"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_105"
                    android:layout_marginRight="@dimen/dimen_150"
                    android:textColor="@color/base_text_info_color"
                    android:textSize="@dimen/font_size_30"
                    android:gravity="center_vertical"
                    android:text="添加服务地址"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/con_btn_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10"
                    />

            </RelativeLayout>

            <anjuyi.cc.edeco.view.SwipeLayout
                android:id="@+id/mListView"
                style="@style/listDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/ll_add_address"
                android:layout_width="@dimen/dimen_480"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginTop="@dimen/dimen_120"
                android:background="@drawable/button_base"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fw_btn_add" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>