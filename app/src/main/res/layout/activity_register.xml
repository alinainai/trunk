<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:background="@drawable/layout_selector_bg"
            android:id="@+id/close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/back_icon"
            android:scaleType="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/dimen_110"
            android:layout_marginTop="@dimen/dimen_110"
            android:gravity="center_horizontal"
            android:src="@drawable/icon_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_107"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="注册手机号码"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/font_size_30" />

            <EditText
                android:id="@+id/ed_user_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_30"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/base_text_color"
                android:textColorHint="#cacaca"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_107"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="设置登录密码"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_30" />

            <EditText
                android:id="@+id/et_user_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_30"
                android:background="@null"
                android:hint="请输入登录密码(8-12位数字+字符)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/base_text_color"
                android:textColorHint="#cacaca"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_107"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="输入验证码"
                android:textColor="@color/base_text_color"
                android:textSize="@dimen/font_size_30" />

            <EditText
                android:id="@+id/ed_identifying_code"
                android:layout_width="@dimen/dimen_250"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_30"
                android:background="@null"
                android:hint="验证码"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/base_text_color"
                android:textColorHint="#cacaca"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_28" />

            <View
                android:id="@+id/xian"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="@dimen/dimen_60"
                android:layout_gravity="center_vertical"
                android:background="#d9d9d9" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_40"
                android:paddingBottom="@dimen/dimen_20"
                android:paddingTop="@dimen/dimen_20">

                <TextView
                    android:id="@+id/verification_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:padding="5dp"
                    android:background="@drawable/button_base"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_28"
                    android:text="获取"/>
            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:background="#e5e5e5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_34"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/protocol_choice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/icon_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_11"
                android:paddingTop="@dimen/dimen_9"
                android:text="我已阅读并同意"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_24" />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_11"
                android:paddingTop="@dimen/dimen_9"
                android:text="《XXX服务协议》"
                android:textColor="#0c9ee3"
                android:textSize="@dimen/font_size_24" />
        </LinearLayout>



        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:theme="@style/AppTheme"
            android:padding="12dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:text="注册"/>


        <TextView
            android:id="@+id/tv_toregisiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_14"
            android:text="登录已有账号"
            android:textColor="#0c9ee3"
            android:textSize="@dimen/font_size_30" />
    </LinearLayout>
</ScrollView>