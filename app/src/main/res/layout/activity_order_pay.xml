<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical" >

    <include layout="@layout/default_main_cart_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_96"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_30"
                android:paddingRight="@dimen/dimen_30" >

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="订单名称"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/font_size_30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:layout_toRightOf="@+id/tv"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="安居易订单: "
                        android:textColor="@color/base_search_hint_color"
                        android:textSize="@dimen/font_size_28" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1234567890"
                        android:textColor="@color/base_search_hint_color"
                        android:textSize="@dimen/font_size_28" />
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_96"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_30"
                android:paddingRight="@dimen/dimen_30" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付金额"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/font_size_30" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="¥ 200"
                    android:textColor="#f88638"
                    android:textSize="@dimen/font_size_28" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:layout_marginTop="@dimen/dimen_22"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_30"
                android:text="支付方式"
                android:textColor="@color/base_search_hint_color"
                android:textSize="@dimen/font_size_30" />

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_134"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingRight="@dimen/dimen_40" >

                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wchat_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_46"
                    android:layout_toRightOf="@+id/img_wx"
                    android:text="微信支付"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/dimen_34" />

                <CheckBox
                    android:id="@+id/wxcheckBox"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_selector"
                    android:button="@null" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/rl_zfb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_134"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingRight="@dimen/dimen_40" >

                <ImageView
                    android:id="@+id/img_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/alipay_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_46"
                    android:layout_toRightOf="@+id/img_zfb"
                    android:text="支付宝支付"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/dimen_34" />

                <CheckBox
                    android:id="@+id/zfbcheckBox"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_selector"
                    android:button="@null" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/rl_yl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_134"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingRight="@dimen/dimen_40" >

                <ImageView
                    android:id="@+id/img_yl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/unionpay_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_46"
                    android:layout_toRightOf="@+id/img_yl"
                    android:text="银联卡支付"
                    android:textColor="@color/base_text_color"
                    android:textSize="@dimen/dimen_34" />

                <CheckBox
                    android:id="@+id/ylcheckBox"
                    android:layout_width="@dimen/dimen_42"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_box_selector"
                    android:button="@null" />
            </RelativeLayout>
            
            <Button 
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_90"
                android:textSize="@dimen/dimen_36"
                android:textColor="@color/white"
                android:text="确认支付"
                android:layout_marginBottom="@dimen/dimen_100"
                android:background="@drawable/button_base"
                />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>