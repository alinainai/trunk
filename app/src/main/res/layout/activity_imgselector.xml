<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/base_background"
    >

        <!--  标题  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_110"
        android:background="@color/base_background"
        android:padding="0dp" >

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_10"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nav_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_cart_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片选择"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_38"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginStart="@dimen/px_20"
            android:layout_marginEnd="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:id="@+id/id_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans"
            android:scrollbars="none" />

</LinearLayout>