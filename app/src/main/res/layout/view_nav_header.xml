<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@mipmap/back_nav"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <anjuyi.cc.edeco.view.CircleImageView
        android:id="@+id/mine_user_icon_img"
        android:layout_width="@dimen/dimen_160"
        android:layout_height="@dimen/dimen_160"
        android:layout_marginStart="@dimen/dimen_30"
        android:src="@mipmap/user_icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <TextView
        android:text="我的名字"
        android:textColor="#8fc450"
        android:id="@+id/nav_head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textSize="18sp" />

</LinearLayout>