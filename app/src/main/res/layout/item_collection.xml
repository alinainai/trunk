<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_220"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/dimen_220"
        android:layout_height="@dimen/dimen_140"
        android:layout_marginStart="@dimen/dimen_28"
        android:layout_marginEnd="@dimen/dimen_20"
        android:src="@mipmap/loading_image"
        android:scaleType="centerCrop"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dimen_20" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/base_text_color"
            android:textSize="@dimen/font_size_32" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_35"
            android:text="¥ 658.00"
            android:textColor="@color/money_color"
            android:textSize="@dimen/font_size_32" />

        <TextView
            android:clickable="true"
            android:id="@+id/delete"
            android:layout_width="@dimen/dimen_140"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_35"
            android:background="@drawable/selector_text_friend"
            android:gravity="center"
            android:text="移出收藏"
            android:textColor="@color/money_color"
            android:textSize="@dimen/font_size_26" />
    </RelativeLayout>
</LinearLayout>