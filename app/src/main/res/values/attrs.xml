<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Lock9View">
        <attr name="nodeSrc" format="color|reference" />
        <attr name="nodeOnSrc" format="color|reference" />
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ShoppingView">
        <attr name="sv_bg_color" format="color" />
        <attr name="sv_text" format="string" />
        <attr name="sv_text_size" format="dimension" />
        <attr name="sv_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="AnimatedPathView">
        <attr name="strokeColor" format="color"/>
        <attr name="strokeWidth" format="float"/>
    </declare-styleable>


    <declare-styleable name="ElasticEditText">
        <!--输入框的提示的文字-->
        <attr name="tipText" format="string"/>
        <!--输入框的提示的内容-->
        <attr name="tipTextColor" format="color"/>
        <!--输入框的提示的大小-->
        <attr name="tipTextSize" format="dimension"/>
        <!--输入框输入的类型，未实现-->
        <attr name="myEditType" format="enum"/>
        <!--输入框的文字-->
        <attr name="myEditText" format="string"/>
        <!--输入框的文字的颜色-->
        <attr name="myEditTextColor" format="color"/>
        <!--输入框的文字的大小-->
        <attr name="myEditTextSize" format="dimension"/>
        <!--没有输入焦点时的下划线的颜色-->
        <attr name="line_Color" format="color"/>
        <!--有焦点的时候的下划线颜色-->
        <attr name="lineChangeColor" format="color"/>
        <!--下划线跳动的速度，从1-10-->
        <attr name="lineSpeed" format="integer"/>
    </declare-styleable>
</resources>