    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8fc450</item>
        <item name="colorPrimaryDark">#8fc450</item>
        <item name="colorAccent">#eee</item>
        <item name="colorButtonNormal">#8fc450</item>
        <item name="colorControlHighlight">#eee</item>
    </style>

    <style name="AppThemeNoStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">#8fc450</item>
        <item name="colorPrimaryDark">#8fc450</item>
        <item name="colorAccent">#eee</item>
        <item name="colorButtonNormal">#8fc450</item>
        <item name="colorControlHighlight">#eee</item>
    </style>

    <!-- main_tab_btn  -->
    <style name="main_tab_btn">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/bottom_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dimen_85</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1dp</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/base_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
    </style>

    <style name="message_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tv_color_33_size_26">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/base_text_color</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">@dimen/dimen_24</item>
        <!-- - - 评分条最小高度和最大高度调整 -->
        <item name="android:maxHeight">@dimen/dimen_26</item>
    </style>

    <!-- 标题栏 -->
    <style name="TopbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/drawable_topbar_bg</item>
    </style>

    <style name="tv_color_66_size_32">
        <item name="android:textSize">@dimen/font_size_32</item>
        <item name="android:textColor">@color/base_text_info_color</item>
    </style>

    <style name="tv_color_white_size_38">
        <item name="android:textSize">@dimen/font_size_38</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_color_black_size_34">
        <item name="android:textSize">@dimen/font_size_34</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 底部弹出框 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="bg_white">
        <item name="android:background">@color/white</item>
    </style>

    <style name="tv_color_black_size_26">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_color_33_size_28">
        <item name="android:textSize">@dimen/font_size_28</item>
        <item name="android:textColor">@color/base_text_color</item>
    </style>

    <style name="tv_color_white_size_28">
        <item name="android:textSize">@dimen/font_size_28</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_color_red_size_28">
        <item name="android:textSize">@dimen/font_size_28</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="tv_color_cc_size_24">
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textColor">@color/base_search_hint_color</item>
    </style>

    <style name="listDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/base_divider_color</item>
        <item name="android:scrollbars">none</item>
    </style>


    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    <style name="progress_dialog_info" parent="@style/custom_dialog">
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- 底部弹出框的动画-->
    <style name="main_menu_anim_style">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.UMDefault" parent="android:style/Theme.NoTitleBar"></style>


    <style name="DialogBottom">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
